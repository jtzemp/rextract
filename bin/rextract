#!/usr/bin/env ruby
require 'rubygems'
require 'thor'
require 'thor/group'

class RextractApp < Thor::Group
  include Thor::Actions
  
  argument :name
  
  def self.source_root
    File.dirname(__FILE__)
  end
  
  def create_project_dir
    puts "create_project_dir #{name} & #{RextractApp.source_root}"
  end
  
  def copy_run
    puts "copy_run #{name} & #{RextractApp.source_root}"
  end
  
  def create_job_dir
    puts "create_job_dir #{name} & #{RextractApp.source_root}"
  end
  
  def create_job_parser
    puts "create_job_parser #{name} & #{RextractApp.source_root}"
  end
  
  def create_job_spider
    puts "create_job_spider #{name} & #{RextractApp.source_root}"
  end
end

RextractApp.start
